<h1>Listing dinners</h1>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>


<% @dinners.each do |dinner| %>
<div class="list_row">
  <tr>
    <td>
      <div id="div_button_rsvp">
        <%= link_to '<button type="button" class="btn btn-primary btn-lg">Join</button>'.html_safe, {:id => dinner.id, :controller => "dinners", :action => "join"}, :class => "fill-div", :remote => true %>
      </div>
      <div class="div_button_info">
        <%= link_to '<button type="button" class="btn btn-primary btn-lg">More</button>'.html_safe, {:id => dinner.id, :controller => "dinners", :action => "show"}, :class => "fill-div" %>
      </div>
    </td>
    <td>
    </td>

    <td>
      <div class="div_image">
        <%= link_to image_tag(dinner.photo, class: 'list_image'), {:id => dinner.id, :controller => "dinners", :action => "show"} %>
      </div>
    </td>
    <div class="list_text">
      <td><%= dinner.date %></td>
      <td><%= dinner.location %></td>
      <td><%= dinner.title %></td>
      <td><%= dinner.description %></td>
      <td><%= dinner.category %></td>
      <td><%= dinner.price %></td>
      <td><%= dinner.seats %></td>
      <td><%= dinner.seats_available %></td>
      <td><%= dinner.stamp %></td>
    </div>
  </tr>
  <br>
</div>
<% end %>
