<h2>Sign up</h2>
<div class="auth-div">  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div><%= f.text_field :first_name, autofocus: true, class: "form-control small_first_name", placeholder: "First Name" %></div>
  <div><%= f.text_field :last_name, autofocus: true, class: "form-control small_last_name", placeholder: "Last Name" %></div>
  <div><%= f.email_field :email, autofocus: true, class: "form-control small_box", placeholder: "Email" %></div>  
  <div><%= f.password_field :password, autocomplete: "off", class: "form-control small_box", placeholder: "Password" %></div>
  <div><%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control small_box", placeholder: "Password confirmation" %></div>  
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div><%= f.submit "Sign up", class: "btn btn-success" %></div>
  <% end %>

  <div class="devise-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
